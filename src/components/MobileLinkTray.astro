---
interface Props {
	open: boolean
}
---

<!-- Blur background -->
<div
	id="background-blur"
	class="hidden fixed opacity-0 transition-opacity inset-0 z-50 bg-zinc-800/40 backdrop-blur-sm dark:bg-black/80"
>
</div>

<!-- Link Tray -->
<div
	id="mobile-link-tray"
	class="hidden fixed opacity-0 transition-opacity ease-in-out duration-1000 inset-x-4 top-8 z-50 origin-top rounded-3xl bg-white p-8 ring-1 ring-zinc-900/5 dark:bg-zinc-900 dark:ring-zinc-800"
>
	<div class="flex items-center">
		<button id="link-tray-close" class="-m-1 p-1">
			<svg
				viewBox="0 0 24 24"
				aria-hidden="true"
				class="h-6 w-6 text-zinc-500 dark:text-zinc-400"
				><path
					d="m17.25 6.75-10.5 10.5M6.75 6.75l10.5 10.5"
					fill="none"
					stroke="currentColor"
					stroke-width="1.5"
					stroke-linecap="round"
					stroke-linejoin="round"></path></svg
			>
		</button>
	</div>

	<nav class="mt-6">
		<ul class="-my-2 text-base text-zinc-800 dark:text-zinc-300">
			<li>
				<a class="block py-3" href="/about">About</a>
			</li>
			<li>
				<a class="block py-3" href="/experience">Experience</a>
			</li>
			<li>
				<a class="block py-3" href="/projects">Projects</a>
			</li>
		</ul>
	</nav>
</div>

<script>
	const linkTray = document.getElementById('link-tray-close')
	const backgroundBlur = document.getElementById('background-blur')
	const mobileLinkTray = document.getElementById('mobile-link-tray')

	linkTray?.addEventListener('click', () => {
		if (!backgroundBlur || !mobileLinkTray) return

		backgroundBlur?.classList.add('hidden')
		mobileLinkTray?.classList.add('hidden')

		document.body.style.overflow = 'auto'
	})
</script>
