---
interface Props {
	open: boolean
}
---

<!-- Blur background -->
<div
	id="background-blur"
	class="hidden fixed inset-0 z-50 bg-zinc-800/40 backdrop-blur-sm duration-150 data-[closed]:opacity-0 data-[enter]:ease-out data-[leave]:ease-in dark:bg-black/80"
>
</div>

<!-- Link Tray -->
<div
	id="mobile-link-tray"
	class="hidden fixed inset-x-4 top-8 z-50 origin-top rounded-3xl bg-white p-8 ring-1 ring-zinc-900/5 duration-150 data-[closed]:scale-95 data-[closed]:opacity-0 data-[enter]:ease-out data-[leave]:ease-in dark:bg-zinc-900 dark:ring-zinc-800"
>
	<div class="flex justify-between items-center">
		<span class="text-sm font-medium text-zinc-600 dark:text-zinc-400"
			>Navigation</span
		>
		<button id="link-tray-close" class="-m-1 p-1">
			<svg
				viewBox="0 0 24 24"
				aria-hidden="true"
				class="h-6 w-6 text-zinc-500 dark:text-zinc-400"
				><path
					d="m17.25 6.75-10.5 10.5M6.75 6.75l10.5 10.5"
					fill="none"
					stroke="currentColor"
					stroke-width="1.5"
					stroke-linecap="round"
					stroke-linejoin="round"></path></svg
			>
		</button>
	</div>

	<nav class="mt-6">
		<ul
			class="-my-2 divide-y divide-zinc-100 text-base text-zinc-800 dark:divide-zinc-100/5 dark:text-zinc-300"
		>
			<li>
				<a class="block py-2" href="/about">About</a>
			</li>
			<li>
				<a class="block py-2" href="/experience">Experience</a>
			</li>
			<li>
				<a class="block py-2" href="/projects">Projects</a>
			</li>
			<li>
				<a class="block py-2" href="/contact">Projects</a>
			</li>
			<li>
				<a class="block py-2" href="/blog">Blog</a>
			</li>
		</ul>
	</nav>
</div>

<script>
	const linkTray = document.getElementById('link-tray-close')
	const backgroundBlur = document.getElementById('background-blur')
	const mobileLinkTray = document.getElementById('mobile-link-tray')

	linkTray?.addEventListener('click', () => {
		backgroundBlur?.classList.add('hidden')
		mobileLinkTray?.classList.add('hidden')
	})
</script>
