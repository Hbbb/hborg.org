---
import ColorSchemeSwitch from './ColorSchemeSwitch.astro'
---

<header class="pointer-events-none relative z-50 flex flex-none flex-col">
	<div class="top-0 z-10 h-16 pt-6">
		<div class="sm:px-8 top-[var(--header-top,theme(spacing.6))] w-full">
			<div class="mx-auto w-full max-w-7xl lg:px-8">
				<div class="relative px-4 sm:px-8 lg:px-12">
					<div class="mx-auto max-w-2xl lg:max-w-5xl">
						<!-- Navbar -->
						<div class="flex gap-4 relative px-4 sm:px-8 lg:px-12">
							<!-- Picture -->
							<div class="flex-1">
								<div
									class="h-10 w-10 rounded-full bg-white/90 p-0.5 shadow-lg shadow-zinc-800/5 ring-1 ring-zinc-900/5 backdrop-blur dark:bg-zinc-800/90 dark:ring-white/10"
								>
									<a href="/">
										<img
											alt=""
											fetchpriority="high"
											width="512"
											height="512"
											decoding="async"
											data-nimg="1"
											class="rounded-full bg-zinc-100 object-cover dark:bg-zinc-800 h-9 w-9"
											sizes="2.25rem"
											src="public/images/profile.jpeg"
											style="color: transparent;"
										/>
									</a>
								</div>
							</div>

							<nav class="flex-1">
								<ul
									class="flex rounded-full bg-white/90 px-3 text-sm font-medium text-zinc-800 shadow-lg shadow-zinc-800/5 ring-1 ring-zinc-900/5 backdrop-blur dark:bg-zinc-800/90 dark:text-zinc-200 dark:ring-white/10"
								>
									<li>
										<a
											href=""
											class="relative block px-3 py-2 transition text-primary dark:text-primary"
										>
											About
											<span
												class="absolute inset-x-1 -bottom-px h-px bg-gradient-to-r from-teal-500/0 via-blue-500/40 to-teal-500/0 dark:from-teal-400/0 dark:via-blue-400/40 dark:to-teal-400/0"
											></span>
										</a>
									</li>
									<li>
										<a
											href=""
											class="relative block px-3 py-2 transition hover:text-primary dark:hover:text-teal-400"
										>
											Experience
										</a>
									</li>
									<li>
										<a
											href=""
											class="relative block px-3 py-2 transition hover:text-primary dark:hover:text-teal-400"
										>
											Projects
										</a>
									</li>
									<li class="hidden sm:block">
										<a
											href=""
											class="relative block px-3 py-2 transition hover:text-primary dark:hover:text-teal-400"
										>
											Contact
										</a>
									</li>
									<li class="hidden sm:block">
										<a
											href="/blog"
											class="relative block px-3 py-2 transition hover:text-primary dark:hover:text-teal-400"
										>
											Blog
										</a>
									</li>
								</ul>
							</nav>

							<!-- Dark mode toggle -->
							<ColorSchemeSwitch />
						</div>
						<!-- Navbar -->
					</div>
				</div>
			</div>
		</div>
	</div>
</header>
