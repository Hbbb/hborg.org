import Navbar from '../components/Navbar.astro'
import PageBackground from '../components/PageBackground.astro'
import Footer from '../components/Footer.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Senior Freelance Software Engineer" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Harrison Borges</title>
	</head>
	<body class="flex flex-col h-full bg-zinc-50 dark:bg-black">
		<PageBackground />

		<div class="relative flex w-full flex-col p-6">
			<Navbar />
			<main class="flex-auto">
				<div class="sm:px-8 mt-16 sm:mt-32">
					<div class="mx-auto w-full max-w-7xl lg:px-8">
						<div class="relative px-4 sm:px-8 lg:px-12">
							<div class="mx-auto max-w-2xl lg:max-w-5xl">
								<slot />
							</div>
						</div>
					</div>
				</div>
			</main>
			<Footer />
		</div>
	</body>
</html>
